<div class="main">
  <div class="container">
    <h1>Academic Rank  <a href="/"><i class="fas fa-user-graduate"></i></a></h1> 
    <p>Showing information about:</p>
  </div>
</div>
<br>


<div class="info_university container ">
  <h2 class="title"><%= @course.name%></h2>
  <%= form_for(@course) do |c| %>
    <table class="table">
      <tr>
        <td class="text-center"><%= c.label :name %></td>
        <td class="text-left line-input"> <%= c.text_field :name%></td>
      </tr>
      <tr>
        <td class="text-center"><%=c.label :university %></td>
        <td class="text-left line-input"><%= c.collection_select :universities_id ,
          University.order(:name), :id, :name ,  {class: "dropdown-menu"} %></td>
      </tr>
      <tr>
        <td class="text-center"><%= c.label :course_score %></td>
        <td class="text-left line-input"><%= c.text_field :score %></td>
      </tr>
       <tr>
        <td class="text-center"><%=c.label :students_score %></td>
        <td class="text-left line-input"><%= c.text_field :students_score %></td>
      </tr>
    </table>    
    <div class="actions">
      <%= c.submit "Save Editions", class:"btn" %>
    </div>
  <%end%> 
</div>

